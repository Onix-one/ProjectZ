
@using ProjectZ.BLL.Enums
@{
    ViewData["Title"] = "Home Page";
}

@model CompanyViewModel


<div class="container">
    @if (Model.Id != 0)
    {
        <h2>Edit</h2>
    }
    else
    {
        <h2>Create</h2>
    }
    <form asp-controller="Companies" asp-action="Edit" method="post">
        <div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
        </div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" type="text" class="form-control" id="usr">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="LegalStatus">Legal status:</label>
            <select asp-for="LegalStatus" class="form-control" id="sel1">
                <option selected value="">Choose...</option>
                <option value="@LegalStatus.ZAO">@LegalStatus.ZAO.ToString()</option>
                <option value="@LegalStatus.OAO">@LegalStatus.OAO.ToString()</option>
                <option value="@LegalStatus.ODO">@LegalStatus.ODO.ToString()</option>
                <option value="@LegalStatus.OOO">@LegalStatus.OOO.ToString()</option>
            </select>
            <span class="alert-danger" asp-validation-for="LegalStatus"></span>
        </div>
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9 text-secondary">
                <button type="submit" class="btn btn-outline-primary px-4">Save</button>
                <a type="button" class="btn btn-outline-danger px-4" asp-action="Index">Close</a>
            </div>
        </div>
    </form>
</div>