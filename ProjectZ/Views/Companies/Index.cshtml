@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<CompanyViewModel>

<div class="container">
    <h2>Companies</h2>
    <div class="pb-2">
        <a asp-controller="Companies" asp-action="Edit"
           type="button" class="btn btn-primary">
            Create new company
        </a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company name</th>
                <th>Legal status</th>
                <th>Number of employees</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Id</td>
                    <td>@company.Name</td>
                    <td>"@company.LegalStatus.ToString()"</td>
                    <td>"@company.Employees.Count()"</td>
                    <td>
                        <div class="row">
                            <div>
                                <a asp-controller="Companies" asp-action="Edit"
                                   asp-route-id="@company.Id" type="button" class="btn btn-success">
                                    Edit
                                </a>
                            </div>
                            <div class="pl-2">
                                <a asp-controller="Companies" asp-action="Delete"
                                   asp-route-id="@company.Id" type="button" class="btn btn-dark">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>